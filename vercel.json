{
  "version": 2,
  "name": "h-e-works",
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/api/index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/api/index.js"
    },
    {
      "source": "/uploads/(.*)",
      "destination": "/backend/uploads/$1"
    },
    {
      "source": "/((.*)\\.(js|css|svg|png|jpg|jpeg|gif|ico|woff|woff2|ttf|eot))",
      "destination": "/client/$1"
    },
    {
      "source": "/vite.svg",
      "destination": "/client/vite.svg"
    },
    {
      "source": "/(.*)",
      "destination": "/client/index.html"
    }
  ],
  "github": {
    "silent": true
  }
}
