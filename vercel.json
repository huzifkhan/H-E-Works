{
  "version": 2,
  "name": "h-e-works",
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/api/index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/api/index.js"
    },
    {
      "source": "/uploads/(.*)",
      "destination": "/backend/uploads/$1"
    },
    {
      "source": "/((?!_next/static|_next/image|favicon.ico).*)",
      "destination": "/client/index.html"
    }
  ],
  "outputDirectory": "client/dist",
  "env": {
    "NODE_ENV": "production"
  }
}
